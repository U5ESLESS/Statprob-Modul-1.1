import numpy as np
import matplotlib.pyplot as plt
from statistics import mean, median, mode

tinggi_badan = [100.5, 99.7, 101, 101.3, 99.9, 98.9, 165, 102.2, 98.7, 102.9, 100]

mean_value = mean(tinggi_badan)
median_value = median(tinggi_badan)
mode_value = mode(tinggi_badan)

plt.hist(tinggi_badan, bins=10, color='skyblue', edgecolor='black')
plt.title('Histogram Tinggi Badan Siswa')
plt.xlabel('Tinggi Badan')
plt.ylabel('Frekuensi')
plt.show()

print(f"Mean: {mean_value}")
print(f"Median: {median_value}")
print(f"Modus: {mode_value}")
